# === Connect to Tryo servers ===
function in_tryo () {
  local local_ip=`ifconfig en0 | grep "inet " | awk '{print $2}' | cut -c1-10`
  if [[ "$local_ip" == "192.168.11" ]]; then
    return 0;
  else
    return 1;
  fi
}

function dsaurus() {
  title dsaurus;
  if in_tryo; then
    ssh dsaurusl $1 -Y
  else
    ssh dsaurus $1 -Y
  fi
}

function bernie() {
  title bernie;
  if in_tryo; then
    ssh berniel $1 -Y
  else
    ssh bernie $1 -Y
  fi
}
