#!/bin/bash
# Strip w0t0p0: prefix from ITERM_SESSION_ID
session_id="${1#*:}"
osascript <<EOF
tell application "iTerm"
    activate
    repeat with w in windows
        repeat with t in tabs of w
            repeat with s in sessions of t
                if unique id of s is "$session_id" then
                    select t
                    return
                end if
            end repeat
        end repeat
    end repeat
end tell
EOF
