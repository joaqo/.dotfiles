// Project tasks configuration. See https://zed.dev/docs/tasks for documentation.
[
  {
    "label": "Open in Github",
    "command": "gh",
    "args": ["browse", "${ZED_RELATIVE_FILE}"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "never",
    "reveal_target": "dock",
    "hide": "always",
    "shell": "system"
  },
  {
    "label": "Save to desktop",
    "command": "echo ${ZED_SELECTED_TEXT} > ~/Desktop/sticky.txt",
    "hide": "on_success"
  },
  {
    "label": "LazyGit",
    "command": "lazygit",
    "shell": {
      "program": "sh"
    },
    "hide": "on_success",
    "reveal_target": "center",
    "show_summary": false,
    "show_command": false,
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "Worktree Rebase",
    "command": "worktree-rebase",
    "hide": "on_success",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "Worktree Remove",
    "command": "worktree-remove",
    "hide": "on_success",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "Worktree Open",
    "command": "worktree-open",
    "hide": "on_success",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  }
]
