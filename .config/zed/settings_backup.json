{
  "sticky_scroll": {
    "enabled": true
  },
  "session": {
    "restore_unsaved_buffers": true
  },
  "restore_on_startup": "last_session",
  "use_system_prompts": false,
  "agent_servers": {
    "claude": { "default_mode": "bypassPermissions" }
  },
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "left",
    "starts_open": false
  },
  "agent_ui_font_size": 17.0,
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "context_servers": {
    "firebase": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "mcp",
        "--dir",
        "/Users/joaqo/mellow/backend/firebase"
      ],
      "env": {}
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "toolbar": {
    "code_actions": true,
    "quick_actions": false,
    "breadcrumbs": true
  },
  "tab_bar": {
    "show": false
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_menus": false,
    "show_project_items": true,
    "show_onboarding_banner": true,
    "show_user_picture": false,
    "show_sign_in": false
  },
  "inline_code_actions": false,
  "terminal": {
    "alternate_scroll": "off",
    "detect_venv": "off",
    "toolbar": {
      "breadcrumbs": false
    },
    "copy_on_select": true,
    "keep_selection_on_copy": false,
    "option_as_meta": true
  },
  "agent": {
    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    },
    "model_parameters": [],
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    }
  },
  "autosave": "on_focus_change",
  "telemetry": {
    "metrics": true,
    "diagnostics": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 13.0,
  "theme": {
    "mode": "system",
    "light": "Vercel Light",
    "dark": "Ayu Dark"
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "off",
      "formatter": [
        {
          "language_server": { "name": "ruff" }
        }
      ]
    }
  },
  "use_smartcase_search": true,
  "vertical_scroll_margin": 8,
  "use_autoclose": true,
  "jsx_tag_auto_close": { "enabled": false },
  "preferred_line_length": 120,
  "relative_line_numbers": "enabled",
  "resize_all_panels_in_dock": ["left", "right", "bottom"],
  "when_closing_with_no_tabs": "keep_window_open",
  "gutter": {
    "line_numbers": false,
    "folds": false,
    "runnables": false
  },
  "indent_guides": {
    "enabled": false
  },
  "use_system_path_prompts": false
}
