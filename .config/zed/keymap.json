// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  // Globals
  {
    "bindings": {
      "cmd-i": "tab_switcher::Toggle",
      "cmd-e": "workspace::CloseAllDocks",
      "cmd-shift-e": "editor::ToggleFocus",
      "cmd-shift-j": "terminal_panel::ToggleFocus",
      "cmd-r": ["action::Sequence", ["git::Diff", "git_panel::ToggleFocus"]],
      "cmd-=": ["zed::IncreaseBufferFontSize", { "persist": true }],
      "cmd--": ["zed::DecreaseBufferFontSize", { "persist": true }],
      "cmd-o": "task::Spawn",
      "cmd-ctrl-enter": "repl::Run",
      "cmd-l": "project_panel::ToggleFocus"
    }
  },

  // Tab switcher edge cases
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-i": ["tab_switcher::Toggle", { "select_last": true }]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-shift-i": "tab_switcher::Toggle"
    }
  },
  {
    "context": "TabSwitcher",
    "bindings": {
      "cmd-shift-i": "menu::SelectPrevious"
    }
  },

  // Vim
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual)",
    "bindings": {
      "H": ["workspace::SendKeystrokes", "g ^"],
      "L": ["vim::EndOfLine", { "display_lines": true }],
      "j": ["vim::Down", { "display_lines": true }],
      "k": ["vim::Up", { "display_lines": true }]
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "shift-y": ["workspace::SendKeystrokes", "y $"],
      "space": "command_palette::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !VimObject",
    "bindings": {
      "p": ["vim::Paste", { "preserve_clipboard": true }]
    }
  },

  // Close opened panels
  {
    "context": "AgentPanel",
    "bindings": {
      "cmd-?": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "TabSwitcher",
    "bindings": {
      "cmd-w": "tab_switcher::CloseSelectedItem"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "cmd-l": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "GitDiff > Editor",
    "bindings": {
      "cmd-r": ["action::Sequence", ["pane::CloseActiveItem", "workspace::ToggleRightDock"]]
    }
  },
  {
    "context": "(CommitEditor > Editor) || GitPanel",
    "bindings": {
      "cmd-r": ["workspace::SendKeystrokes", "cmd-w cmd-w"]
    }
  },

  // Open new split file
  {
    "context": "(VimControl || (!Editor && !Terminal))",
    "bindings": {
      "ctrl-w shift-n": "workspace::NewFileSplitHorizontal",
      "ctrl-w n": "workspace::NewFileSplitVertical",
      "ctrl-w v": "pane::SplitAndMoveRight",
      "ctrl-w s": "pane::SplitAndMoveDown"
    }
  }
]
